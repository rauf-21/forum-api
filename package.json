{
  "name": "forum-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf build",
    "clean-build": "run-s clean generate-db-types build",
    "start": "run-s clean-build start-build",
    "start-build": "cross-env NODE_ENV=development node ./build/src/app.js",
    "start:dev": "cross-env NODE_ENV=development tsx watch ./src/app.ts",
    "test": "cross-env NODE_ENV=test jest --coverage --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll --coverage --runInBand",
    "migrate": "cross-env NODE_ENV=development tsx scripts/migrate.ts",
    "migrate-up": "cross-env NODE_ENV=development tsx scripts/migrate.ts latest",
    "migrate-down": "cross-env NODE_ENV=development tsx scripts/migrate.ts down-to 'NO_MIGRATIONS'",
    "migrate:test": "cross-env NODE_ENV=test tsx scripts/migrate.ts",
    "migrate-up:test": "cross-env NODE_ENV=test tsx scripts/migrate.ts latest",
    "migrate-down:test": "cross-env NODE_ENV=test tsx scripts/migrate.ts down-to 'NO_MIGRATIONS'",
    "generate-db-types": "cross-env NODE_ENV=development tsx scripts/db-codegen.ts --camel-case",
    "lint": "tsc --noEmit --skipLibCheck && eslint migrations scripts src tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.9",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^5",
    "cross-env": "^7.0.3",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "2",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsx": "^3.14.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@hapi/hapi": "^21.3.2",
    "@hapi/jwt": "^3.2.0",
    "@libsql/kysely-libsql": "^0.3.0",
    "awilix": "^9.0.0",
    "bcrypt": "^5.1.1",
    "core-js": "3.33.3",
    "dotenv-expand": "^10.0.0",
    "dotenv-flow": "^4.0.0",
    "kysely": "^0.26.3",
    "kysely-codegen": "^0.11.0",
    "kysely-migration-cli": "^0.2.3",
    "nanoid": "3",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  }
}
